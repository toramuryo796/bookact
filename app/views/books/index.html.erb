<div class="l-body">  
  <div class="header">
    <%= render "shared/header" %>
  </div>
  
  <%# header下線 %>
  <div class="header-border">
  </div>
  <%# /header下線 %>

  <%# 開閉メニュー %>
  <%= render partial: "shared/category_list", locals: {categories: @categories} %>
  <%# /開閉メニュー %>

  <div class="main-footer">
    <div class="main book-main">

      <div class="catch-flase">
        <div class="top-video">
          <%#video autoplay muted playsinline src="/videos/book.mp4"></video%>
        </div>
        <div class="video-flase">
          <span>今日、何を読む？</span>
        </div>
      </div>
        <%# 検索機能 %>

      <div class="book-introduce-list">

        <%# 本の紹介リスト %>
        <%= render partial: "shared/books", locals: {books: @books} %>
      </div>
      <%# 本の紹介リスト %>
    </div>

    <div class="footer">
      <%= render "shared/footer" %>
    </div>
  </div>
</div>